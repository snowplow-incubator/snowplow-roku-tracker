<component name="SnowplowTracker" extends="Task" xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">
    <interface>
        <!-- initializes the tracker -->
        <field id="init" type="assocarray" />
        <!-- tracks a screen view event -->
        <field id="screenView" type="assocarray" />
        <!-- tracks a self-describing event -->
        <field id="selfDescribing" type="assocarray" />
        <!-- tracks a structured event -->
        <field id="structured" type="assocarray" />
        <!-- start tracking of Audio node -->
        <field id="enableAudioTracking" type="assocarray" />
        <!-- start tracking of Audio/Video node -->
        <field id="enableMediaTracking" type="assocarray" />
        <!-- start tracking of Video node -->
        <field id="enableVideoTracking" type="assocarray" />
        <!-- end tracking of Video node -->
        <field id="disableAudioTracking" type="assocarray" />
        <!-- end tracking of Audio/Video node -->
        <field id="disableMediaTracking" type="assocarray" />
        <!-- end tracking of Video node -->
        <field id="disableVideoTracking" type="assocarray" />
        <!-- track a self-describing event with media entities -->
        <field id="customAudioEvent" type="assocarray" />
        <!-- track a self-describing event with media entities -->
        <field id="customMediaEvent" type="assocarray" />
        <!-- track a self-describing event with media entities -->
        <field id="customVideoEvent" type="assocarray" />
    </interface>
</component>
